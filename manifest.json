{
  "manifest_version": 2,

  "name": "ServiceNow Developer Tools",
  "version": "0.3.0",
  "description": "USC Custom ServiceNow Developer Tools",

  "chrome_settings_overrides": {
    "search_provider": {
      "name": "USC ServiceNow Production",
      "keyword": "snp",
      "search_url": "https://usc.service-now.com/nav_to.do?uri=%2F$sn_global_search_results.do%3Fsysparm_search%3D{searchTerms}",
      "favicon_url": "http://www.foo.__MSG_url_domain__/favicon.ico",
      "encoding": "UTF-8",
      "is_default": false
    }
  },

  "content_scripts": [{
  	"js": ["content.js"],
  	"css": ["style.css"],
      "matches": ["*://*.service-now.com/*"]
  }]

}
